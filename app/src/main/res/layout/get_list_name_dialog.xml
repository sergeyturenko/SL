<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/dialogListName"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:ems="10"
        android:hint="@string/listName"
        android:maxLength="18"
        android:textSize="13sp" >

    </EditText>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content" >

        <Button android:id="@+id/dialogListButtonYes"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.50"
                android:text="@string/list_dialog_yes"
                android:textSize="12sp" />

        <Button
            android:id="@+id/dialogListButtonCancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.50"
            android:text="@string/list_dialog_no"
            android:textSize="12sp" />

    </LinearLayout>
  
</LinearLayout>